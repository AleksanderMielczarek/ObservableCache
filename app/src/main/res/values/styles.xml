<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <style name="AppTheme.Widget" />

    <style name="AppTheme.Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_menu_item_color</item>
        <item name="itemTextColor">@color/bottom_menu_item_color</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>
